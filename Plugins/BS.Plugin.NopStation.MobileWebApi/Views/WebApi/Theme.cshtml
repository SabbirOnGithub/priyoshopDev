                            @Html.OverrideStoreCheckboxFor(model => model.HeaderBackgroundColor_OverrideForStore, model => model.HeaderBackgroundColor, Model.ActiveStoreScopeConfiguration)
                            @Html.NopLabelFor(model => model.HeaderBackgroundColor):
                        </td>
                        <td class="adminData">
                            @Html.TextBoxFor(model => model.HeaderBackgroundColor, new { @class = "color" })
                            <div><label>@T("Plugins.NopStation.MobileWebApi.HeaderBackgroundColorHint")<label></div>
                            @Html.ValidationMessageFor(model => model.HeaderBackgroundColor)
                        </td>
                    </tr>
                    <tr>
