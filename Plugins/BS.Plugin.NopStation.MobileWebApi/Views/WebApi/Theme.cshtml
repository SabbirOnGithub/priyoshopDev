@model BS.Plugin.NopStation.MobileWebApi.Models.DashboardModel.ThemeSettingModel
@using Nop.Core.Infrastructure
@using BS.Plugin.NopStation.MobileWebApi.Extensions
@using Nop.Web.Framework
@using Nop.Web.Framework.UI;
@{
    Html.SetActiveMenuItemSystemName("MobileWebApi.");
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";

}

@using System.Globalization;
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

<script src="~/Plugins/NopStation.MobileWebApi/Scripts/jscolor.js" />
<script>jscolor.init();</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="plugincontainer">
        <div class="configurecontaincontainer">
