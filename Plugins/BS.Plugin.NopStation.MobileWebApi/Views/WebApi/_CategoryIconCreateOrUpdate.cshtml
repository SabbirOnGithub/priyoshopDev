@model BS.Plugin.NopStation.MobileWebApi.Models.DashboardModel.CategoryIconsModel
@using Nop.Core.Infrastructure;
@using Nop.Services;
@using Nop.Services.Events;
@using Nop.Web.Framework;
@using Nop.Web.Framework.Events;

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.CategoryId)
                        </div>
                        @if (Model.Id > 0)
                        {
                            <div class="col-md-9">
                                @Html.NopDisplayFor(model => model.CategoryName)
                            </div>
                        }
                        else
                        {
                            <div class="col-md-9">
                                @Html.NopDropDownListFor(model => model.CategoryId, Model.AvailableCategories)
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.TextPrompt)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.TextPrompt)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.DisplayOrder)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.DisplayOrder)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.PictureId)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.PictureId)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
