@model BS.Plugin.NopStation.MobileWebApi.Models.Slider.SliderImageModel
@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using Nop.Web.Framework.UI;

@{
    //page title
    ViewBag.Title = "Edit home page slider";

    ViewBag.Title = T("Admin.Plugins.SliderImage").Text;
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit home page slider
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a href="/MobileWebApiConfiguration/SliderImage">back to home page slider list</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="homepagecategory-delete" class="btn bg-red" data-toggle="modal" data-target="#homepageslidermodel-delete-confirmation">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @Html.Partial("~/Plugins/NopStation.MobileWebApi/Views/WebApi/_SliderImageCreateOrUpdate.cshtml", Model)
}

<div id="homepageslidermodel-delete-confirmation" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="homepageslidermodel-delete-confirmation-title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="homepageslidermodel-delete-confirmation-title">Are you sure?</h4>
            </div>
            <form action="/MobileWebApiConfiguration/SliderImageDelete/@Model.Id" method="post" novalidate="novalidate">
                <div class="form-horizontal">
                    <div class="modal-body">
                        @Html.AntiForgeryToken()
                        Are you sure you want to delete this item?
                    </div>
                    <div class="modal-footer">
                        <span class="btn btn-default" data-dismiss="modal">No, cancel</span>
                        <button type="submit" class="btn btn-primary pull-right">
                            Delete
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

