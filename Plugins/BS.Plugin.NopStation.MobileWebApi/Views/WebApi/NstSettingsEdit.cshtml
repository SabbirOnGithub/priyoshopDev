@model BS.Plugin.NopStation.MobileWebApi.Models.NstSettingsModel.Nst_ConfigurationSettings
@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using Nop.Web.Framework.UI;
@{
    Html.SetActiveMenuItemSystemName("MobileWebApi.NopStationSecrateToken");
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";
}
@using System.Globalization;
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Plugins.NopMobile.WebApi.NST")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a href=" @Url.Action("NopStationSecrateToken", "MobileWebApiConfiguration")">back to settings</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue"><i class="fa fa-floppy-o"></i>@T("Admin.Common.Save")</button>
        </div>
    </div>
    <div class="raw form-horizontal clearfix">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-9">
                                @Html.HiddenFor(model => model.EditMode, new { @value = true })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.NopLabelFor(model => model.NST_KEY)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.NST_KEY)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.NopLabelFor(model => model.NST_SECRET)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.NST_SECRET)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}






