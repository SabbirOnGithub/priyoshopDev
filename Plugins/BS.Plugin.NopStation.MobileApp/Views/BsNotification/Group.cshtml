@using Nop.Core.Infrastructure
@{Layout = "_PluginsAdminLayout.cshtml";}
@{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    //page title
    ViewBag.Title = T("Admin.Plugin.Misc.BsNotificaton.Group.List").Text;

}
<div class="content-header clearfix">
    <h1 class="title pull-left">
        <i class="fa fa-tags"></i> @T("Admin.Plugin.Misc.BsNotificaton.Group.List.Header")
    </h1>
    <div class="options">
        <a href="/Admin/Plugin/NopStation/MobileApp/CreateGroup" class="k-button">@T("Admin.Common.AddNew")</a>
    </div>
</div>


<div class="content">
    <div class=" panel panel-default">
        <div class="panel-body">
            <table class="adminContent">
                <tr>
                    <td>
                        <div id="group-grid"></div>

                        <script>
    $(document).ready(function () {
        $("#group-grid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("GroupList", "BsNotificationAdmin", new { area = "" }))",
                        type: "POST",
                        dataType: "json"

                    },
                    destroy: {
                        url: "@Html.Raw(Url.Action("DeleteGroup", "BsNotificationAdmin", new { area = "" }))",
                    type: "POST",
                    dataType: "json"
                }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors",

                },
                error: function(e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                pageSize: @(defaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(gridPageSizes)]
            },
            editable: {
                confirmation: true,
                mode: "inline"
            },
            scrollable: false,
            columns: [{
                field: "Id",
                title: "Group Id",
                width: 30
            },{
                field: "Name",
                title: "Name",
                width:100,
                template:'<a href="SmartGroup/#=Id#">#=Name#</a>'
            }, {
                field: "Query",
                title: "Query",
                width: 500,
                headerAttributes: { style: "text-align:center" },

            }, {
                field: "Id",
                title: "@T("Admin.Common.Edit")",
                width: 100,
                template: '<a href="EditGroup/#=Id#">@T("Admin.Common.Edit")</a>'
            },{
                command: [ {
                    name: "destroy",
                    text: "@T("Admin.Common.Delete")"
                },
                ],
        width: 200,
        filterable: false
    }]
        });
    });
                        </script>


                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>