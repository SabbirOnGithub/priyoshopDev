@using Nop.Core.Infrastructure
@{Layout = "_PluginsAdminLayout.cshtml";}
@{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    //page title
    ViewBag.Title = T("Admin.Plugin.Misc.BsNotificaton.Queued.Manage").Text;

}
<div class="content-header clearfix">
    <h1 class="title pull-left">
        <i class="fa fa-tags"></i> @T("Admin.Plugin.Misc.BsNotificaton.Queued.Header")
</h1>
    @*<div class="options">
            <a href="/Admin/Plugin/NopStation/MobileApp/CreateSchedule" class="k-button">@T("Admin.Common.AddNew")</a>
        </div>*@
</div>

<div class="content">
    <div class=" panel panel-default">
        <div class="panel-body">
            <table class="adminContent">
                <tr>
                    <td>
                        <div id="queued-grid"></div>

                        <script>
                $(document).ready(function () {
                    $("#queued-grid").kendoGrid({
                        dataSource: {
                            type: "json",
                            transport: {
                                read: {
                                    url: "@Html.Raw(Url.Action("QueuedList", "BsNotificationAdmin", new { area = "" }))",
                                    type: "POST",
                                    dataType: "json"

                                },
                                destroy: {
                                    url: "@Html.Raw(Url.Action("DeleteQueued", "BsNotificationAdmin", new { area = "" }))",
                                    type: "POST",
                                    dataType: "json"
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "Total",
                                errors: "Errors",

                            },
                            error: function(e) {
                                display_kendoui_grid_error(e);
                                // Cancel the changes
                                this.cancelChanges();
                            },
                            pageSize: @(defaultGridPageSize),
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        pageable: {
                            refresh: true,
                            pageSizes: [@(gridPageSizes)]
                        },
                        editable: {
                            confirmation: true,
                            mode: "inline"
                        },
                        scrollable: false,
                        columns: [{
                            field: "Id",
                            title: "Queued Id",
                            width: 30
                        },{
                            field: "ToCustomerId",
                            title: "ToCustomerId",
                            width:30,
                        }
                        ,{
                            field: "SubscriptionId",
                            title: "SubscriptionId",
                            width:30,
                        }
                         ,{
                             field: "ToCustomerName",
                             title: "ToCustomerName",
                             width:50,
                         },
                            {
                                field: "Priority",
                                title: "Priority",
                                width: 30,
                                headerAttributes: { style: "text-align:center" },

                            },
                            {
                                field: "GroupName",
                                title: "GroupName",
                                width: 30
                            }
                            ,
                        {
                            field: "Message",
                            title: "Message",
                            width: 200,
                            headerAttributes: { style: "text-align:center" },

                        },
                            {
                                field: "NotificationType",
                                title: "NotificationType",
                                width: 200,
                                headerAttributes: { style: "text-align:center" },

                            },
                        {
                            field: "ItemId",
                            title: "ItemId",
                            width: 200,
                            headerAttributes: { style: "text-align:center" },

                        },
                            {
                                field: "IsSent",
                                title: "IsSent",
                                width: 30,
                                headerAttributes: { style: "text-align:center" },

                            },  {
                                field: "CreatedOnUtc",
                                title: "CreatedOnUtc",
                                width: 40,
                                type: "date",
                                format: "{0:G}",
                                headerAttributes: { style: "text-align:center" },

                            },  {
                                field: "SentOnUtc",
                                title: "SentOnUtc",
                                width: 40,
                                type: "date",
                                format: "{0:G}",
                                headerAttributes: { style: "text-align:center" },

                            }
                            ,  {
                                field: "ErrorLog",
                                title: "ErrorLog",
                                width: 100,
                                type: "date",
                                format: "{0:G}",
                                headerAttributes: { style: "text-align:center" },

                            },


                            {
                                field: "Id",
                                title: "@T("Admin.Common.Edit")",
                                width: 100,
                                template: '<a href="EditQueued/#=Id#">@T("Admin.Common.Edit")</a>'
                            },{
                                command: [ {
                                    name: "destroy",
                                    text: "@T("Admin.Common.Delete")"
                                },
                                ],
                                width: 200,
                                filterable: false
                            }]
                    });
                });
                        </script>


                    </td>
                </tr>
            </table>        
        </div>
    </div>
</div>

