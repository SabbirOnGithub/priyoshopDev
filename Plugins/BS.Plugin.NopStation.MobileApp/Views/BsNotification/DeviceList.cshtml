@using Nop.Core.Infrastructure
@{Layout = "_PluginsAdminLayout.cshtml";}
@{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    //page title
    ViewBag.Title = T("Admin.Plugin.Misc.BsNotificaton.Device.Manage").Text;

}
<div class="content-header clearfix">
    <h1 class="title pull-left">
        <i class="fa fa-tags"></i> @T("Admin.Plugin.Misc.BsNotificaton.Device.Header")
</h1>
    @*<div class="options">
            <a href="/Admin/Plugin/NopStation/MobileApp/CreateSchedule" class="k-button">@T("Admin.Common.AddNew")</a>
        </div>*@
</div>
<div class="content">
    <div class=" panel panel-default">
        <div class="panel-body">
            <table class="adminContent">
                <tr>
                    <td>
                        <div id="device-grid"></div>

                        <script>
                            $(document).ready(function () {
                                $("#device-grid").kendoGrid({
                                    dataSource: {
                                        type: "json",
                                        transport: {
                                            read: {
                                                url: "@Html.Raw(Url.Action("DeviceList", "BsNotificationAdmin", new { area = "" }))",
                                                type: "POST",
                                                dataType: "json"

                                            },
                                            destroy: {
                                                url: "@Html.Raw(Url.Action("DeleteDevice", "BsNotificationAdmin", new { area = "" }))",
                                                type: "POST",
                                                dataType: "json"
                                            }
                                        },
                                        schema: {
                                            data: "Data",
                                            total: "Total",
                                            errors: "Errors",

                                        },
                                        error: function(e) {
                                            display_kendoui_grid_error(e);
                                            // Cancel the changes
                                            this.cancelChanges();
                                        },
                                        pageSize: @(defaultGridPageSize),
                                        serverPaging: true,
                                        serverFiltering: true,
                                        serverSorting: true
                                    },
                                    pageable: {
                                        refresh: true,
                                        pageSizes: [@(gridPageSizes)]
                                    },
                                    editable: {
                                        confirmation: true,
                                        mode: "inline"
                                    },
                                    scrollable: false,
                                    columns: [{
                                        field: "CustomerId",
                                        title: "CustomerId",
                                        width: 30
                                    },{
                                        field: "DeviceToken",
                                        title: "DeviceToken",
                                        width: 30
                                    },{
                                        field: "DeviceType",
                                        title: "DeviceType",
                                        width:30,
                                    }
                                     ,{
                                         field: "CustomerName",
                                         title: "CustomerName",
                                         width:50,
                                     },
                                        {
                                            field: "SubscriptionId",
                                            title: "SubscriptionId",
                                            width: 100,
                                            headerAttributes: { style: "text-align:center" },

                                        },
                                        {
                                            field: "CreatedOnUtc",
                                            title: "CreatedOnUtc",
                                            width: 40,
                                            type: "date",
                                            format: "{0:G}",
                                            headerAttributes: { style: "text-align:center" },

                                        },  {
                                            field: "UpdatedOnUtc",
                                            title: "UpdatedOnUtc",
                                            width: 40,
                                            type: "date",
                                            format: "{0:G}",
                                            headerAttributes: { style: "text-align:center" },

                                        }
                                        ,
                                        {
                                            field: "Id",
                                            title: "@T("Admin.Common.Edit")",
                                            width: 100,
                                            template: '<a href="EditDevice/#=Id#">@T("Admin.Common.Edit")</a>'
                                        },{
                                            command: [ {
                                                name: "destroy",
                                                text: "@T("Admin.Common.Delete")"
                                            },
                                            ],
                                            width: 200,
                                            filterable: false
                                        }]
                                });
                            });
                        </script>


                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>