@model Nop.Plugin.Purchase.Offer.ViewModel.PurchaseOfferOptionViewModel

@if (Model != null)
{
    if (Model.OfferAvailable)
    {
        <tr>
            <td></td>
            <td></td>
            <td>
                <img height="75" width="75" alt="@Model.ProductName" src="@Model.ProductImage" title="@Model.ProductName">
            </td>
            <td>
                <a class="product-name" style="color:#00a1b1">@Model.ProductName</a>
                <div class="attributes" style="color:indianred">
                    @Model.Note
                </div>
            </td>
            <td>FREE</td>
            <td><div style="width: 50px; height: 40px; border: 1px solid #e9e9e9; line-height: 40px; text-align:center"> @Model.Quantity</div></td>
            <td class="subtotal footable-last-column"><span class="product-subtotal">FREE</span></td>
        </tr>
    }
    else if (!string.IsNullOrWhiteSpace(Model.Message) && Model.ShowNotificationOnCart)
    {
        <tr>
            <td></td>
            <td colspan="6">@Html.Raw(Model.Message)</td>
        </tr>
    }
}