@using Nop.Plugin.Widgets.MobileLogin.Models;
@model MobileLoginSettingsModel

@{
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Mobile Login Settings
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Country Settings</strong>
                    </div>
                    <div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.CountryCode)
                                </div>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.CountryCode, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    Example
                                </div>
                                <div class="col-md-9">
                                    <strong>us</strong> for United States<br />
                                    <strong>gb</strong> for United Kingdom<br />
                                    <strong>au</strong> for Australia<br />
                                    <strong>bd</strong> for Bangladesh (বাংলাদেশ)<br />
                                    <strong>af</strong> for Afghanistan (‫افغانستان‬‎)<br />
                                    <strong>bg</strong> for Bulgaria (България)<br />
                                    <strong>in</strong> for India (भारत)<br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>SMS Gateway Settings</strong>
                    </div>
                    <div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.SmsGatewayUserName)
                                </div>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.SmsGatewayUserName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.SmsGatewayPassword)
                                </div>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.SmsGatewayPassword, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}