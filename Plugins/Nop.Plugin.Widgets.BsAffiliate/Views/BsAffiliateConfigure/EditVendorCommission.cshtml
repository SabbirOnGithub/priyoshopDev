@model Nop.Plugin.Widgets.BsAffiliate.Models.AffiliateCommissionRateModel

@using Nop.Web.Framework.UI;

@{
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Vendor/Category Commission";
    Html.SetActiveMenuItemSystemName("Affiliate.VendorCommission");
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit Commission Rate
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a href="/BsAffiliateConfigure/VendorCommission">Back to list</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @Html.Partial("~/Plugins/Widgets.BsAffiliate/Views/BsAffiliateConfigure/_CreateOrUpdateCommission.cshtml", Model)
}