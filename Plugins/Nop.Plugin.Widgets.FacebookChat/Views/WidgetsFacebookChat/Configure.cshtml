@{
    Layout = "";
}
@model Nop.Plugin.Widgets.FacebookChat.Models.FacebookChatModel
@using Nop.Web.Framework;

@using (Html.BeginForm())
{@Html.AntiForgeryToken()
<div class="panel panel-default">
    <div class="panel-body">
        <div class="form-group">
            <div class="col-md-3">
                @Html.NopLabelFor(model => model.FacebookChatPageId)
            </div>
            <div class="col-md-9">
                @Html.NopEditorFor(model => model.FacebookChatPageId)
                @Html.ValidationMessageFor(model => model.FacebookChatPageId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.NopLabelFor(model => model.FacebookChatAppId)
            </div>
            <div class="col-md-9">
                @Html.NopEditorFor(model => model.FacebookChatAppId)
                @Html.ValidationMessageFor(model => model.FacebookChatAppId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.NopLabelFor(model => model.ThemeColor)
            </div>
            <div class="col-md-9">
                @Html.NopEditorFor(model => model.ThemeColor)
                @Html.ValidationMessageFor(model => model.ThemeColor)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            </div>
        </div>
    </div>
</div>
}
