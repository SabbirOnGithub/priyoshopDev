@model PurchaseOfferModel

@using Nop.Core.Domain.Discounts;
@using Nop.Services
@using Nop.Web.Framework.UI;

<script>
    $(document).ready(function () {
        toggleChangeGiftProduct(false);
        $("#@Html.FieldIdFor(model => model.ForAllProducts)").change(toggleForAllProducts);

        toggleForAllProducts();
    });


    function toggleChangeGiftProduct(editmode) {
        if (editmode) {
            $('#pnlChangeGiftProduct').show();
            $('#btnChangeGiftProduct').hide();
        } else {
            $('#pnlChangeGiftProduct').hide();
            $('#btnChangeGiftProduct').show();
        }
    }

    function toggleForAllProducts() {
        if ($('#@Html.FieldIdFor(model => model.ForAllProducts)').is(':checked')) {
            $('[data-tab-name=tab-applied-to-categories]').closest('li').hide();
            $('[data-tab-name=tab-applied-to-manufacturers]').closest('li').hide();
            $('[data-tab-name=tab-applied-to-products]').closest('li').hide();
            $('[data-tab-name=tab-applied-to-vendors]').closest('li').hide();
        } else {
            $('[data-tab-name=tab-applied-to-categories]').closest('li').show();
            $('[data-tab-name=tab-applied-to-manufacturers]').closest('li').show();
            $('[data-tab-name=tab-applied-to-products]').closest('li').show();
            $('[data-tab-name=tab-applied-to-vendors]').closest('li').show();
        }
    }

</script>

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            @if (Model.Id > 0)
            {
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.GiftProductName)
                    </div>
                    <div class="col-md-9">
                        <div class="form-text-row">
                            @if (Model.GiftProductId > 0)
                            {
                                <a href="/Admin/Product/Edit/@Model.GiftProductId"> @Model.GiftProductName</a>
                            }

                            <button type="submit" name="btnChangeGiftProduct" onclick="toggleChangeGiftProduct(true);return false;" id="btnChangeGiftProduct" class="btn btn-primary">
                                @T("Admin.Orders.Fields.GiftProduct.Change")
                            </button>
                            <div id="pnlChangeGiftProduct" style="margin-top: 3px;">
                                @Html.NopEditorFor(model => model.GiftProductId)
                                <button type="submit" name="btnSaveGiftProduct" id="btnSaveGiftProduct" class="btn btn-primary" style="margin-left: 3px">
                                    @T("Admin.Common.Save")
                                </button>
                                @Html.ActionConfirmation("btnSaveGiftProduct")

                                <button type="submit" name="btnCancelGiftProduct" onclick="toggleChangeGiftProduct(false);return false;" id="btnCancelGiftProduct" class="btn bg-teal" style="margin-left: 3px">
                                    @T("Admin.Common.Cancel")
                                </button>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.GiftProductId)
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.GiftProductId)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.GiftProductId)
                        @Html.ValidationMessageFor(model => model.GiftProductId)
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.MinimumCartAmount)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.MinimumCartAmount)
                    @Html.ValidationMessageFor(model => model.MinimumCartAmount)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.StartDateUtc)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.StartDateUtc)
                    @Html.ValidationMessageFor(model => model.StartDateUtc)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.EndDateUtc)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.EndDateUtc)
                    @Html.ValidationMessageFor(model => model.EndDateUtc)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.Quantity)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.Quantity)
                    @Html.ValidationMessageFor(model => model.Quantity)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.ForAllProducts)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.ForAllProducts)
                    @Html.ValidationMessageFor(model => model.ForAllProducts)
                </div>
            </div>
        </div>
    </div>
</div>
